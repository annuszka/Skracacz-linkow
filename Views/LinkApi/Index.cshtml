@model List<skracacz.Models.Link>

<div>
    @using (Html.BeginForm("AddLink", "LinkApi", FormMethod.Post))
    {
        <input type="text" name="FullUrl" placeholder="Full Url"/> <br/>
        <button type="submit">Add</button>
    }
</div>  
<div>
    <table>
        @foreach(var item in Model) {
        <tr>
            <td><strong>Full url: </strong></td>
            <td>@Html.DisplayFor(model => item.FullUrl)  |</td>
            <td><strong>Short url: </strong></td>

            <td><a href="@Url.Action("RedirectToSite", "Redirect", new { shortUrl = item.ShortUrl})" target="_blank">@(Html.DisplayFor(model => item.ShortUrl))</a></td>
            <td>   | @Html.ActionLink("Delete", "Delete", "LinkApi", item.Id)</td>
        </tr>
        }
    </table>
</div>